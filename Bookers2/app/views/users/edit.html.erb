<div class="container">
    <h2>Editing Book</h2>
    <div class="row">
        <% if @user.errors.any? %>
        <div class=error_explanation>
          <div class="error_count"><%= @user.errors.count %>errors prohibited this obj from being saved:</div>
          <ul class=error_list>
            <% @user.errors.full_messages.each do |message| %>
            <li class=error_message><%= message %></li>
            <% end %>
          </ul>
        </div>
          <% end %>
  
        <%= form_with model:@user, local:true do |form| %>
  
          <p><%= form.label :name, "Name" %><br>
          <%= form.text_field :name %></p>
  
  
          <label for="inputImage">Image</label></br>
          <%= form.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  
          <p><%= form.label :introduction, "Introduction" %><br>
          <%= form.text_area :introduction %></p>
  
  
          <%= form.submit 'Update User', class: :"btn btn-success"  %>
        <% end %>
    </div>
  </div>