<div class="container">
  <div class="row">
    <div class="col-5">
      <%=render partial:"books/user", locals:{ user: @user } %>

      <%=render partial:"books/new", locals:{ book_new: @book_new } %>
    </div>
    <div class="col">
      <h2>Users</h2>
  <table>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
         <th></th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr class="list">
        <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg",size:'100x100' %></td>
        <td><%= user.name %></td>
        <td><%=link_to "Show", user_path(user.id) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
    </div>
  </div>
</div>