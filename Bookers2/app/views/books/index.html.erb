<div class="container">
    <div class="row">

        <%=render partial:"error", locals:{ book: @book } %>
    </div>

    <div class="row">
        <div class="col-md-3">

            <%=render partial:"user", locals:{ user: @user } %>

            <h2>New book</h2>
                <%= form_with model:@book, local:true do |form| %>

                  <p><%= form.label :title, "title" %><br>
                  <%= form.text_field :title %></p>

                  <p><%= form.label :body, "Opinion" %><br>
                  <%= form.text_area :body %></p>

                  <%= form.submit "Create Book", class:"btn btn-success"%>

                <% end %>
        </div>

        <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
          <table>
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
              </tr>
            </thead>
            <tbody>
            <% @books.each do |book| %>
              <tr class="list">
               <td><%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg",size:'100x100'%>
                <% end %>
              </td>
                <td><%=link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>

    </div>
</div>