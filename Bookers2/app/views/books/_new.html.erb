<h2>New book</h2>
<%= form_with model:@book_new, local:true do |form| %>

  <p><%= form.label :title, "title" %><br>
  <%= form.text_field :title %></p>

  <p><%= form.label :opinion, "Opinion" %><br>
  <%= form.text_area :opinion %></p>

  <%= form.submit "Create Book", class:"btn btn-success"%>

<% end %>