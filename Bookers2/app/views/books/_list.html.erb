<h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
    <% books.each do |book| %>
      <tr class="list">
        <%= link_to book_path(book.id) do %>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg",size:'100x100'%></td>
        <% end %>
        <td><%=link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>